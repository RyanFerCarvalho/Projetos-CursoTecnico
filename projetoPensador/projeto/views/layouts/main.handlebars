<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
  <title>Document</title>
</head>
<body>
  <nav id="navbar">
    <a id="brand" href="/">
      <img src="/assets/imgs/brand.png" alt="Logo pensador">
    </a>
    <ul>
      <li>
        <a href="/">Pensamentos</a>
      </li>
      {{#if session.userId}}
      <li>
        <a href="/thoughts/dashboard">Dashboard</a>
      </li>
      <li>
        <a href="/logout">Logout</a>
      </li>
      {{else}}
      <li>
        <a href="/login">Entrar</a>
      </li>
      <li>
        <a href="/register">Registrar</a>
      </li>
      {{/if}}
    </ul>
  </nav>
  {{#if messages.message}}
    <div id="message" class="message">
      {{messages.message}}
      <i id="close" class="close bi bi-x"></i>
    </div>
  {{/if}}
  <div class="container">
    {{{body}}}
  </div>
  <footer>
    <p><span>Pensador</span> &copy;2023</p>
  </footer>

  <script src="/scripts/close.js"></script>
  <script src="/scripts/inputs.js"></script>
  <script src="/scripts/likeBtn.js"></script>
</body>
</html>
